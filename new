    <!-- Matrix Rain Canvas -->
    <canvas class="matrix-rain" id="matrixCanvas"></canvas>

    <script>
        // Create stars
        function createStars() {
            const starsContainer = document.getElementById('stars');
            const starCount = 150;
            
            for (let i = 0; i < starCount; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                star.style.width = Math.random() * 3 + 'px';
                star.style.height = star.style.width;
                star.style.left = Math.random() * 100 + '%';
                star.style.top = Math.random() * 100 + '%';
                star.style.animationDelay = Math.random() * 3 + 's';
                star.style.animationDuration = Math.random() * 2 + 2 + 's';
                starsContainer.appendChild(star);
            }
        }
        
        // Matrix rain effect
        function initMatrixRain() {
            const canvas = document.getElementById('matrixCanvas');
            const ctx = canvas.getContext('2d');
            
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            
            const characters = '01';
            const fontSize = 14;
            const columns = canvas.width / fontSize;
            const drops = Array(Math.floor(columns)).fill(1);
            
            function drawMatrix() {
                ctx.fillStyle = 'rgba(0, 0, 0, 0.05)';
                ctx.fillRect(0, 0, canvas.width, canvas.height);
                
                ctx.fillStyle = '#0f0';
                ctx.font = fontSize + 'px monospace';
                
                for (let i = 0; i < drops.length; i++) {
                    const text = characters[Math.floor(Math.random() * characters.length)];
                    ctx.fillText(text, i * fontSize, drops[i] * fontSize);
                    
                    if (drops[i] * fontSize > canvas.height && Math.random() > 0.975) {
                        drops[i] = 0;
                    }
                    drops[i]++;
                }
            }
            
            setInterval(drawMatrix, 35);
            
            window.addEventListener('resize', function() {
                canvas.width = window.innerWidth;
                canvas.height = window.innerHeight;
            });
        }
        
        // Create confetti
        function createConfetti() {
            const colors = ['#ff0080', '#00dbde', '#ffcc00', '#ff0000', '#00ff00', '#0000ff'];
            
            for (let i = 0; i < 150; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.top = Math.random() * 100 + 'vh';
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.width = Math.random() * 20 + 5 + 'px';
                confetti.style.height = confetti.style.width;
                confetti.style.opacity = '1';
                confetti.style.animation = `fadeIn 1s ${Math.random() * 2}s forwards`;
                document.body.appendChild(confetti);
                
                // Animate confetti falling
                const duration = Math.random() * 3 + 2;
                confetti.animate([
                    { transform: 'translateY(-100vh) rotate(0deg)' },
                    { transform: `translateY(100vh) rotate(${Math.random() * 720}deg)` }
                ], {
                    duration: duration * 1000,
                    easing: 'cubic-bezier(0.215, 0.61, 0.355, 1)',
                    delay: Math.random() * 2000
                });
                
                // Remove confetti after animation
                setTimeout(() => confetti.remove(), duration * 1000 + 2000);
            }
        }
        
        // Transition from terminal to birthday message
        function showBirthdayMessage() {
            const terminal = document.getElementById('terminal');
            const birthdayMessage = document.getElementById('birthdayMessage');
            
            // Hide terminal with fade out
            terminal.style.opacity = '0';
            terminal.style.transition = 'opacity 1s ease-in-out';
            
            setTimeout(() => {
                terminal.style.display = 'none';
                birthdayMessage.style.display = 'flex';
                birthdayMessage.style.opacity = '0';
                birthdayMessage.style.animation = 'fadeIn 1s forwards';
                
                // Create effects
                createStars();
                createConfetti();
                
                // Continue matrix rain
                initMatrixRain();
            }, 1000);
        }
        
        // Initialize on page load
        window.onload = function() {
            createStars();
            initMatrixRain();
            
            // Show birthday message after ALL terminal animations complete
            // Last animation delay is 6.5s + animation duration of 3s = 9.5s
            setTimeout(showBirthdayMessage, 9500);
            
            // Add click/tap to skip
            document.body.addEventListener('click', function() {
                const terminal = document.getElementById('terminal');
                if (terminal.style.display !== 'none') {
                    showBirthdayMessage();
                }
            });
            
            // Add spacebar to skip
            document.addEventListener('keydown', function(e) {
                if (e.code === 'Space' || e.key === ' ') {
                    const terminal = document.getElementById('terminal');
                    if (terminal.style.display !== 'none') {
                        showBirthdayMessage();
                    }
                }
            });
        };
    </script>
</body>
